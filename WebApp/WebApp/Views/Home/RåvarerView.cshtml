@model WebApp.Models.Frontend.InventoryAndProductionOverview
@{
    ViewBag.Title = "Råvarer";
}


<div class="top-bar">
    <div class="search-container">
        <form action="">
            <button type="submit">
                <i class="bi-box-fill"></i>
                <i class="bi bi-search"></i>
            </button>
            <input type="text" placeholder="Search..." name="Search">
        </form>
    </div>
</div>

<div class="body">

    <div class="crud">
        <button class="crud-btn to-do">Slet</button>
        <button class="crud-btn in-progress">Redigér</button>
        <button class="crud-btn create-type">Opret Type</button>
        <button class="crud-btn create-new" onclick="location.href='@Url.Action("CreateRawMaterialView", "Home")'">Opret Ny</button>

    </div>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Varenummer</th>
                <th>Varenavn</th>
                <th>Kategori</th>
                <th>Enhed</th>
                <th>Modtagelsesdato</th>
                <th>Mængde</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.RawMaterials)
            {
                <tr>
                    <td>@item.UUID</td>
                    <td>@item.MaterialName</td>
                    <td>@item.Category</td>
                    <td>@item.Unit</td>
                    <td>@item.ReceivedDate.ToString("dd-MM-yyyy")</td>
                    <td>@item.Quantity</td>
                </tr>
            }
        </tbody>
    </table>


</div>

