@model List<WebApp.DTO.RawMaterialDTO>
@{
    ViewBag.Title = "Råvarer";
}

<div class="top-bar">
    <div class="search-container">
        <form action="">
            <button type="submit">
                <i class="bi-box-fill"></i>
                <i class="bi bi-search"></i>
            </button>
            <input type="text" placeholder="Search..." name="Search">
        </form>
    </div>
</div>

<div class="body">
    <div class="crud">
        <button class="crud-btn to-do">Slet</button>
        <button class="crud-btn in-progress">Rediger</button>
        <button class="crud-btn create-type">Opret Type</button>
        <button class="crud-btn create-new" onclick="location.href='@Url.Action("CreateRawMaterialView", "Home")'">Opret Ny</button>
        <button class="crud-btn" onclick="location.href='@Url.Action("DeleteMeasurementType", "Home")'">Slet enhed</button>

    </div>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>ID</th>
                <th>Varenavn</th>
                <th>Mængde</th>
                <th>Måleenhed</th>
                <th>Udløbsdato</th>
                <th>Rediger</th>
                <th>Slet</th>
            </tr>
        </thead>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Material_id</td>
                    <td>@item.Name</td>
                    <td>@item.MeasurementValue</td>
                    <td>@item.MeasurementType</td>
                    <td>@item.ExpirationDate</td>
                    <td><button onclick="location.href='@Url.Action("EditRawMaterial", "Home", new { id = item.Material_id})'">Rediger</button></td>
                    <td><button onclick="location.href='@Url.Action("DeleteRawMaterial", "Home", new {id = item.Material_id})'">Slet</button></td>
                </tr>
            }
        </tbody>
    </table>
</div>
