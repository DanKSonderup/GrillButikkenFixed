<h2>Opret Ny Produktion</h2>

@using (Html.BeginForm("CreateProductProduction", "Home", FormMethod.Post))
{
    <div class="form-group mb-3">
        <label for="name" class="form-label">Navn</label>
        <input type="text" class="form-control" id="name" name="name" placeholder="Indtast produktionsnavn" required />
    </div>

    <div class="form-group mb-3">
        <label for="status" class="form-label">Status</label>
        <select class="form-control" id="status" name="status" required>
            <option value="" disabled selected>Vælg en Status</option>
            @foreach (var type in ViewBag.StatusType)
            {
                <option value="@type">@type</option>
            }
        </select>
    </div>

    <div class="form-group mb-3">
        <label for="product" class="form-label">Produkter</label>
        <select class="form-control" id="product" name="product" required>
            <option value="" disabled selected>Vælg et produkt</option>
            @foreach (var type in ViewBag.Products)
            {
                <option value="@type.Name">@type.Name</option>
            }
        </select>
    </div>

    <div class="form-group mb-3">
        <label for="amount" class="form-label">Planlagt antal</label>
        <input type="number" class="form-control" id="amount" name="amount" placeholder="Indtast antal" min="0" step="1" required />
    </div>

    <div class="form-group mb-3">
        <label for="startDato" class="form-label">Startdato</label>
        <input type="date" class="form-control" id="startDato" name="startDato" required />
    </div>

    <div class="form-group mb-3">
        <label for="endDato" class="form-label">Forventet Slutdato</label>
        <input type="date" class="form-control" id="endDato" name="endDato" required />
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-success btn-lg w-25 mb-5">Opret produktion</button>
    </div>
}

