@{ 
    ViewBag.Title = "CreateProduct";
}
<h2>Opret Nyt Produkt</h2>

@using (Html.BeginForm("CreateProduct", "Home", FormMethod.Post))
{
    <div class="form-group mb-3">
        <label for="name" class="form-label">Produktnavn</label>
        <input type="text" class="form-control" id="name" name="name" placeholder="Indtast Produktnavn" required />
    </div>

    <div class="form-group mb-3">
        <label for="RawMaterialsNeeded" class="form-label">Materialer</label>
        <ul>
            @if (ViewBag.RawMaterials != null)
            {
                foreach (var item in ViewBag.RawMaterials)
                {
                    <li>
                        <input type="checkbox" name="RawMaterialsNeeded" value="@item.Name" />
                        <label>@item.Name</label>
                        <label>@item.MeasurementValue</label>
                        <input type="number" class="form-control" id="@item.MeasurementValue" name="@item.MeasurementValue" />
                    </li>
                }
            }
        </ul>
    </div>

    <div class="form-group mb-3">
        <label for="EstimatedProductionTime" class="form-label">Estimeret produktionstid</label>
        <input type="number" class="form-control" id="EstimatedProductionTime" name="EstimatedProductionTime" 
        placeholder="Indtast estimat (timer)" min="0" step="0.5" required />
    </div>

    <div class="form-group mb-3">
        <label for="amount" class="form-label">Antal produkter</label>
        <input type="number" class="form-control" id="amount" name="amount" placeholder="Indtast mængde" min="0" step="1" required />
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-success btn-lg w-25 mb-5">Opret Produkt</button>
    </div>
}